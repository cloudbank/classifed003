<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        tools:context=".ImageDisplayActivity" >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivResult"
            android:layout_alignParentTop="true"
            android:text="username"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivResult"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:layout_height="300dp"
            android:layout_width="300dp"
            android:background="#2B2351"
            android:scaleType="centerCrop"
            android:padding="1dp"
           />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/ivResult"
            android:layout_alignTop="@+id/username"
            android:text="timestamp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivResult"
            android:layout_alignLeft="@+id/ivResult"
            android:layout_centerHorizontal="true"
            android:textSize="12sp" />



        <EditText
            android:id="@+id/etComments"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/username"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="add comment"
            android:textColor="#2B2351"
            android:textColorHint="#2B2351">
        </EditText>

        <Button
            android:id="@+id/btnComments"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/buttonshape"
            android:onClick="addComment"
            android:shadowColor="#2B2351"
            android:shadowDx="2"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="@string/add"
            android:textColor="#2B2351"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/etComments"
            android:layout_toRightOf="@+id/etComments"
            android:layout_toEndOf="@+id/etComments"></Button>
        <WebView
            android:id="@+id/comments"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etComments"
            android:layout_below="@+id/etComments"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textColor="#2B2351"
            android:textSize="8sp" >
        </WebView>
    </RelativeLayout>

</ScrollView>