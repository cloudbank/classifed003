<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:scrollbars="vertical"
    tools:context=".ImageDisplayActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/toolbar"
        android:text="timestamp"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ivResult"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_below="@id/timestamp"
        android:layout_centerHorizontal="true"
        android:background="#2B2351"
        android:padding="1dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivResult"
        android:padding="1dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivResult"
        android:layout_margin="10dp"
        android:text="Taken by username"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:padding="10dp"
        android:text="NO TAGS YET!"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tags"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="add commentList"
        android:textColor="#2B2351"
        android:textColorHint="#2B2351"></EditText>

    <Button
        android:id="@+id/btnComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etComments"
        android:onClick="addComment"
        android:padding="2dp"
        android:text="@string/add"

        android:textColor="#2B2351"
        android:textSize="14sp"
        android:theme="@style/MyButton"></Button>

    <WebView
        android:id="@+id/comments"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etComments"
        android:layout_below="@+id/btnComments"
        android:background="@color/AliceBlue"
        android:scrollbars="vertical"
        android:textColor="#2B2351"
        android:textSize="8sp"></WebView>


</RelativeLayout>
