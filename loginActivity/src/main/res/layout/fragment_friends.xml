<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_login">

    <com.jetradarmobile.snowfall.SnowfallView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:snowflakeAlphaMax="205"
        app:snowflakeAlphaMin="100"
        app:snowflakeAngleMax="5"
        app:snowflakeSizeMax="8dp"
        app:snowflakeSizeMin="5dp"
        app:snowflakeSpeedMax="12"
        app:snowflakeSpeedMin="8"
        app:snowflakesAlreadyFalling="false"
        app:snowflakesFadingEnabled="true"
        app:snowflakesNum="250" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPhotos"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@android:color/transparent"
            android:scrollbars="vertical" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"></View>


        <LinearLayout
            android:id="@+id/llview"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:alpha=".4"
                android:layout_weight="1"
                android:background="@color/back_sand_40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The essence of haiku is &quot;cutting&quot; (kiru).[1] This is often represented by the juxtaposition of two images or ideas and a kireji (&quot;cutting word&quot;) between them,[2] a kind of verbal punctuation mark which signals the moment of separation and colours the manner in which the juxtaposed elements are related." />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:alpha=".4"
                android:layout_weight="1"
                android:background="@color/back_sand_40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" kireji " />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:alpha=".4"
                android:layout_weight="1"
                android:background="@color/back_sand_40">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>


            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/main_content"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom|center" >

                <TextView
                    android:id="@+id/main_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="top|right" />

                <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_add_black_24dp"
                    ads:layout_anchor="@id/main_view"
                    ads:layout_anchorGravity="bottom|right|end"
                    app:backgroundTint="@color/delicious" />

            </android.support.design.widget.CoordinatorLayout>
        </LinearLayout>
    </LinearLayout>


    <com.google.android.gms.ads.AdView
        android:id="@+id/publisherAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_unit" />


</RelativeLayout>
