<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/AliceBlue"
    android:layout_marginLeft="10dp">

    <TextView
        android:id="@+id/tvCommons2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/DeepPink"
        android:textSize="12sp"
        android:layout_below="@+id/ivCommons"
        android:text="@string/commons_under"
        android:textAlignment="center"
        android:gravity="clip_horizontal"
        android:padding="3dp"
        android:layout_centerInParent="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvCommons2"
        android:background="@color/AliceBlue"
        android:clipToPadding="true"
        android:gravity="center"
        android:scrollbars="vertical"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/tvCommons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/RoyalBlue"
        android:gravity="center"
        android:textSize="12sp"
        android:text="@string/commons"
        android:padding="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/commons_circle_logo"
        android:id="@+id/ivCommons"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvCommons2"
        android:layout_toStartOf="@+id/tvCommons2"
        android:layout_alignBottom="@+id/tvCommons" />


</RelativeLayout>