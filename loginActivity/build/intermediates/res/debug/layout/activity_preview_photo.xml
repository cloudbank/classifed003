<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".PreviewPhotoActivity" >

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="300dp"
        android:contentDescription="Image Preview"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/etPhotoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPreview"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:hint="(&lt;name.png&gt;)" />

</RelativeLayout><!-- From: file:/Users/sabine/android_studio/flickr/loginActivity/src/main/res/layout/activity_preview_photo.xml -->