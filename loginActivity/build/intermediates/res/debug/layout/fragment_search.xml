<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation='horizontal'>

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Tag OR" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag AND" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text" />
    </RadioGroup>

    <GridView
        android:id="@+id/gvPhotos"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/etQuery"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:layout_marginTop="10dp"
        android:verticalSpacing="35dp">

    </GridView>

    <EditText
        android:id="@+id/etQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_marginTop="23dp"
        android:layout_weight="1"
        android:textSize="14sp"
        android:hint="Enter search term">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnQuery"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#2B2351"
        android:shadowDx="2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="@string/search"
        android:textColor="#2B2351"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/etQuery"
        android:layout_toRightOf="@+id/etQuery"
        android:layout_toEndOf="@+id/etQuery" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignLeft="@+id/radioGroup1"
        android:text="@string/search_by" />

</RelativeLayout><!-- From: file:/Users/sabine/android_studio/flickr/loginActivity/src/main/res/layout/fragment_search.xml -->